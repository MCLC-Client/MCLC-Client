{
  "productName": "MCLC",
  "name": "mclc",
  "description": "Minecraft Launcher made by Fernsehheft",
  "author": "Fernsehheft",
  "version": "1.3.3",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "start": "electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.launcher.mclc",
    "productName": "MCLC",
    "icon": "resources/icon.png",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "axios": "^1.13.5",
    "discord-rpc": "^4.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.5",
    "fs-extra": "^11.3.3",
    "ipc-event-emitter": "^2.0.2",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "skinview3d": "^3.4.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  }
}
