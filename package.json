{
  "productName": "MCLC",
  "name": "mclc",
  "description": "Lightweight, open-source Minecraft launcher (Electron + React) - features profile & modpack management, skin preview, Discord Rich Presence, and a modern UI for easy installs and updates.",
  "author": "Fernsehheft",
  "version": "1.5.2",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "start": "electron .",
    "dist-clean": "concurrently \"rimraf dist\" \"rimraf release\"",
    "dist": "npm run dist-clean && npm run build && electron-builder",
    "dist-all": "npm run dist-clean && npm run build && electron-builder --wl"
  },
  "build": {
    "appId": "de.pluginhub.mclc",
    "productName": "MCLC",
    "icon": "resources/icon.png",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*",
      "resources/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "mac": {
      "target": [
        "zip"
      ],
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "zip"
      ],
      "category": "Game"
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "axios": "^1.13.5",
    "dotenv": "17.3.1",
    "discord-rpc": "^4.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.5",
    "fs-extra": "^11.3.3",
    "ipc-event-emitter": "^2.0.2",
    "jszip": "^3.10.1",
    "minecraft-launcher-core": "^3.18.2",
    "msmc": "^4.0.0",
    "nanoid": "^5.1.6",
    "pidtree": "^0.6.0",
    "pidusage": "^4.0.1",
    "prismarine-nbt": "^2.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^2.0.3",
    "react-window": "^2.2.7",
    "skinview3d": "^3.4.1",
    "socket.io-client": "^4.8.3",
    "sucrase": "^3.35.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "postcss": "^8.4.35",
    "rimraf": "^6.1.3",
    "tailwindcss": "^3.4.1",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  }
}